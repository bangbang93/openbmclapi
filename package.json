{
  "name": "openbmclapi",
  "version": "1.7.2",
  "description": "bmclapi@home",
  "bin": "dist/openbmclapi.js",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "true",
    "build": "rm -rf dist && tsc",
    "build:esbuild": "esbuild --bundle --platform=node --sourcemap --outfile=dist/openbmclapi.js src/index.ts",
    "dev": "tsc-watch --onSuccess \"node dist/index.js\"",
    "pkg": "pkg . -C Gzip",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bangbang93/openbmclapi.git"
  },
  "author": "bangbang93 <bangbang93@163.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bangbang93/openbmclapi/issues"
  },
  "homepage": "https://github.com/bangbang93/openbmclapi#readme",
  "dependencies": {
    "@mongodb-js/zstd": "^1.2.0",
    "avsc": "^5.7.4",
    "bluebird": "^3.5.5",
    "colors": "^1.3.3",
    "dotenv": "^8.0.0",
    "express": "^4.18.1",
    "fs-extra": "^8.1.0",
    "got": "^11.8.5",
    "http2-express-bridge": "^1.0.7",
    "lodash-es": "^4.17.21",
    "morgan": "^1.9.1",
    "ms": "^2.1.2",
    "p-map": "^7.0.1",
    "progress": "^2.0.3",
    "socket.io-client": "^4.7.4",
    "tail": "^2.2.6"
  },
  "devDependencies": {
    "@bangbang93/eslint-config-recommended": "^0.0.3",
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node18": "^1.0.1",
    "@types/bluebird": "^3.5.27",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^8.0.0",
    "@types/lodash-es": "^4.17.7",
    "@types/morgan": "^1.7.36",
    "@types/ms": "^0.7.30",
    "@types/node": "^18.11.17",
    "@types/progress": "^2.0.5",
    "@types/tail": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.30.0",
    "pkg": "^5.7.0",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.0.4"
  },
  "npm": {
    "publish": false
  },
  "pkg": {
    "outputPath": "pkg",
    "targets": [
      "node16-linux",
      "node16-macos",
      "node16-windows"
    ],
    "assets": [
      "node_modules/**/*.node"
    ]
  }
}
